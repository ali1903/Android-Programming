<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="14dp" />
            <stroke android:width="1dip" android:color="#56B3FD" />
            <gradient android:angle="-90" android:startColor="#0B7AAC" android:endColor="#018BCA"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="14dp" />
            <stroke android:width="1dip" android:color="#51308C" />
            <solid android:color="#5429A3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="14dp" />
            <stroke android:width="1dip" android:color="#9874D8" />
            <gradient android:angle="-90" android:startColor="#7857B3" android:endColor="#0A4CBD" />
        </shape>
    </item>
</selector>